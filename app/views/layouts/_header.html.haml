.nav-area.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .row
      / Brand and toggle get grouped for better mobile display
      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-header
        .col-lg-12
          /%h4.title #{link_to "WF", root_path, :class => "title"}
          .header-logo
            =link_to "", root_path
          /=link_to "", root_path, class: "header-logo"        


      / Collect the nav links, forms, and other content for toggling
      .navbar-collapse.collapse
        %ul.nav.navbar-nav 
          / %ul#nav_pill_section.nav.nav-pills.navbar-right.colored-pills 
          /%li{:class => "#{'active' if current_page?(root_path)} smoothScroll"}=link_to "Home", root_path
          %li#nav-pill-pink{:class => "#{'active' if current_page?(episodes_path)}"}=link_to "Episodes", episodes_path
          %li{:class => "#{'active' if current_page?(about_path)} dropdown"}
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              About
              %b.caret
            %ul.dropdown-menu
              %li
                =link_to "The Event", about_path
              %li
                =link_to "Team", team_path
              %li
                =link_to "Sponsors", sponsors_path
              %li
                =link_to "Contact Us", contact_us_path
          / %li{:class => "#{'active' if current_page?(journals_path)}"}=link_to "Journals", "http://blog.wayfaringlive.com"
          %li{:class => "#{'active' if current_page?(journals_path)}"}=link_to "Journals", journals_path
          %li#nav-pill-pink{:class => "#{'active' if current_page?(social_hub_path)}"}=link_to "Social Hub", social_hub_path
          %li#nav-pill-pink{:class => "#{'active' if current_page?(shop_path)}"}=link_to "Get Access", shop_path
          %li#nav-pill-pink{:class => "#{'active' if current_page?(exclusive_content_path)}"}=link_to "Exclusive Content", exclusive_content_path
          / %li#nav-pill-pink{:class => "#{'active' if current_page?("http://shop.wayfaringlive.com")}"}=link_to "Shop", "http://shop.wayfaringlive.com"
          
          -if user_signed_in?
            =link_to "Sign out", destroy_user_session_path, :method => :delete, :class => "#{'active' if current_page?(root_path)} nav-user-signout nav-user-link" 
          -else  
            %li{:class => "#{'active' if current_page?(about_path)} dropdown"}
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}        
                Join the Rumpus
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "Sign Up", new_user_registration_path
                %li
                  =link_to "Sign In", new_user_session_path
 
          
          

