%nav.navbar.nav-area.navbar-default.navbar-fixed-top{role: "navigation"}
  .container
    .row
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{ type: "button", "data-toggle" => "collapse", "data-target" => "#wayfaring_nav"}
          / %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        .header-logo
          =link_to "", root_path
      / Collect the nav links, forms, and other content for toggling
      #wayfaring_nav.collapse.navbar-collapse
        %ul.nav.navbar-nav 
          / %ul#nav_pill_section.nav.nav-pills.navbar-right.colored-pills 
          /%li{:class => "#{'active' if current_page?(root_path)} smoothScroll"}=link_to "Home", root_path
          %li{:class => "#{'active' if current_page?(episodes_path)}"}=link_to "Episodes", episodes_path
          %li{:class => "#{'active' if current_page?(about_path)} dropdown"}
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              About
              %b.caret
            %ul.dropdown-menu
              %li
                =link_to "The Event", about_path
              %li
                =link_to "Team", team_path
              %li
                =link_to "Partners", partners_path
              %li
                =link_to "Contact Us", contact_us_path
          %li{:class => "#{'active' if current_page?(journals_path)}"}=link_to "Journals", journals_path
          %li{:class => "#{'active' if current_page?(social_hub_path)}"}=link_to "Social Hub", social_hub_path
          %li{:class => "#{'active' if current_page?(exclusive_content_path)}"}=link_to "Exclusive Content", current_user ? exclusive_content_path : access_levels_path
          -unless user_signed_in?
            %li#nav-pill-pink{:class => "#{'active' if current_page?(get_access_path)}"}=link_to "Get Access", access_levels_path
          
          / %li{:class => "#{'active' if current_page?(exclusive_content_path)}"}=link_to "Join the Rumpus", exclusive_content_path
          / 
          
          /// ACTIVATE WHEN KICKSTARTER IS LIVE

          -if user_signed_in?
            %li
              =link_to "Sign out", destroy_user_session_path, :method => :delete
          -else  
            %li{:class => "#{'active' if current_page?(about_path)} dropdown"}
              %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}        
                Join the Rumpus
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to "Sign Up", new_user_registration_path
                %li
                  =link_to "Sign In", new_user_session_path
          

