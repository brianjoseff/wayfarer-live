    %link{:href => "//admin.zoomph.com/Display/Widget/v5/Styles/Reset.css", :rel => "stylesheet"}/
    %link{:href => "//zoomphcontent.azurewebsites.net/clients/wayfaring/style.css", :rel => "stylesheet"}
