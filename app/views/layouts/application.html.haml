%html
  %head
    %title Wayfaring
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application"
    / %link{:href => 'http://code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css', :rel => "stylesheet", :type => "text/css"}
    %meta{:name=>"description", :content=> "The 20-day interactive road trip hosted by Malcolm Freberg. See latest episodes, meet the crew, view exclusive content, and more."}
    %meta{content: "width=device-width, initial-scale=1", name: "viewport"}
    
    / Zoomph Head Code
    /%script{:src => "//display.zoomph.com/Scripts/jquery-1.7.1.min.js", :type => "text/javascript"}
